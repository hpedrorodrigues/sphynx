#!/usr/bin/env bash

# Make vim the default editor
export VISUAL='vim'
export EDITOR="${VISUAL}"

# Make less the default pager
export LESS='-iRFXMx4'
export PAGER='less'
export MANPAGER="${PAGER}"

# Setting language environment
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

### Loading personal scripts

readonly DOTFILES_DIR="${HOME}/.sphynx"

readonly DOTFILES=(
  # Common
  "${DOTFILES_DIR}/aliases.sh"
  "${DOTFILES_DIR}/os_aliases.sh"
  "${DOTFILES_DIR}/alien.sh"
  "${DOTFILES_DIR}/aws.sh"
  "${DOTFILES_DIR}/common.sh"
  "${DOTFILES_DIR}/filesystem.sh"
  "${DOTFILES_DIR}/git.sh"
  "${DOTFILES_DIR}/kubernetes.sh"
  "${DOTFILES_DIR}/learning.sh"
  "${DOTFILES_DIR}/network.sh"

  # Secrets
  "${DOTFILES_DIR}/secrets.sh"

  # Descartes
  "${HOME}/.descartesrc"
)

for dotfile in ${DOTFILES[*]}; do
  if [ -f "${dotfile}" ]; then
    source "${dotfile}"
  else
    echo "!!! No such file \"${dotfile}\". Ignoring it." >&2
  fi
done

#|> NVM
# I'm disabling nvm for now because it makes the shell startup really slow
if ${NVM_ENABLED:-false}; then
  export NVM_DIR="${HOME}/.nvm"
  export NVM_INSTALLATION_DIR='/usr/local/opt/nvm'

  readonly NVM_FILES=(
    "${NVM_DIR}/nvm.sh"
    "${NVM_DIR}/bash_completion"
    "${NVM_INSTALLATION_DIR}/nvm.sh"
    "${NVM_INSTALLATION_DIR}/etc/bash_completion.d/nvm"
  )

  for nvm_file in "${NVM_FILES[@]}"; do
    if [ -s "${nvm_file}" ]; then
      source "${nvm_file}"
    fi
  done
fi

#|> Krew
export KREW_BIN="${HOME}/.krew/bin"

if [ -d "${KREW_BIN}" ] && echo "${PATH}" | grep "${KREW_BIN}" -v -q; then
  export PATH="${PATH}:${KREW_BIN}"
fi

#|> Go
export GOPATH="${HOME}/.go"
export GO_WORKSPACE="${GOPATH}/src"

if [ -d "${GOPATH}/bin" ] && echo "${PATH}" | grep "${GOPATH}/bin" -v -q; then
  export PATH="${PATH}:${GOPATH}/bin"
fi

#|> AWS CLI
export AWS_PROFILE='sphynx'

#|> Homebrew/Linuxbrew
# https://docs.brew.sh/Analytics
export HOMEBREW_NO_ANALYTICS='1'

#|> Bat
export BAT_THEME='Dracula'
export BAT_STYLE='plain'

#|> Sphynx
export SX_CONFIRMATION_REQUIRED='false'
