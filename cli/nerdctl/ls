#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

source "${SPHYNX_CLI_DIR}/.internal/all.sh"
source "${SPHYNX_NAMESPACE_DIR}/shared/shared.sh"
source "${SPHYNX_NAMESPACE_DIR}/core/ls.sh"

##? List objects
##?
##? Usage:
##?     ls [--ips]
##?
##? Options:
##?     --ips  Show only containers and their respective IPs
##?
##?
##? Examples:
##?     ls
##?     ls --ips

sx::parse_arguments "${@}"

sx::nerdctl::objects "${ips:-}"
