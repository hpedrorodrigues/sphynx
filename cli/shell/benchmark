#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

source "${SPHYNX_COMMAND_DIR}/.internal/all.sh"
source "${SPHYNX_NAMESPACE_DIR}/shared/shared.sh"
source "${SPHYNX_NAMESPACE_DIR}/core/benchmark.sh"

##? Run benchmarks for shells
##?
##? Usage:
##?     benchmark (zsh | bash)
##?
##? Examples:
##?     benchmark zsh
##?     benchmark bash

sx::parse_arguments "${@}"

if ${zsh:-false}; then
  sx::shell::benchmark 'zsh'
elif ${bash:-false}; then
  sx::shell::benchmark 'bash'
else
  sx::error::illegal_arguments "${*}"
fi
