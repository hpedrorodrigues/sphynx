#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

source "${SPHYNXC_DIR}/.internal/all.sh"
source "${SPHYNXN_DIR}/shared/shared.sh"
source "${SPHYNXN_DIR}/core/whatsapp.sh"

##? Open whatsapp chats on browser
##?
##? Usage:
##?     whatsapp <phone> [--text <message>]
##?
##? Options:
##?     -t --text <message>  Open the chat with the provided text
##?
##? Examples:
##?     whatsapp "+5511999991111"
##?     whatsapp "+19991119999" --text "Hey, how's it going?"

sx::parse_arguments "${@}"

sx::share::whatsapp "${phone:-}" "${text:-}"
