### Window
background-opacity = "0.9"
background-blur = "true"

window-padding-x = "8"
window-padding-y = "8"
window-theme = "auto"
window-padding-balance = "true"

confirm-close-surface = "false"

### Terminal
command = "/usr/local/bin/zsh --login --interactive -c 'exec sx terminal tmux force-attach \"sphynx\"'"

shell-integration = "zsh"
shell-integration-features = "no-cursor,title"

clipboard-read = "allow"
clipboard-write = "allow"
copy-on-select = "true"

### System

macos-option-as-alt = "false"

### Font (ghostty +list-fonts)
font-family = "Fira Code"
font-family-bold = "Fira Code Bold"
font-family-italic = "Fira Code Retina"
